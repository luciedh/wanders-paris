<div class="trips-container">
  <% @trips.each do |trip| %>
    <div class="trip-container">
      <h1 class="title"><%= trip.title %></h1>
      <p class="content"><%= trip.places.count %> lieux Ã  visiter</p>
      <button class="btn-white"><%= trip.category.name %></button>
      <div class="trip-places-container">
